<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order No.</th>
      <th>Seller</th>
      <th>Buyer</th>
      <th>Product. ID</th>
      <th>Product</th>
      <th>Price</th>
      <th>Purchase Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.seller_id %></td>
        <td><%= order.buyer_id %></td>
        <td><%= order.product_id %></td>
        <td><%= order.product_name %></td>
        <td><%= order.price %></td>
        <td><%= order.created_at %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

