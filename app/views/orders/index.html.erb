<p id="notice"><%= notice %></p>

<h1>My Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Order No.</th>
      <th>Seller</th>
      <th>Buyer</th>
      <th>Product. ID</th>
      <th>Product</th>
      <th>Price</th>
      <th>Purchase Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.seller.display_name %></td>
        <%# Skip one layer of lookup by accessing via session. %>
        <td><%= current_user.display_name %></td>
        <td><%= order.product_id %></td>
        <td><%= order.product_name %></td>
        <td><%= order.product_price %></td>
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
